{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2017",
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"],
			"@lumi/core/*": ["../core/src/*"],
			"@lumi/functions/*": ["../functions/api/*"],
			"@lumi/emails/*": ["../emails/emails/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"video.d.ts",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"public/notification-worker.js",
		"../../eslint.config.mjs"
	],
	"exclude": ["node_modules"]
}
