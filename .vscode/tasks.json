{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Lint",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"lint"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Lint & Fix",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"lint:fix"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Check Types",
			"type": "shell",
			"command": "bun",
			"args": [
				"run",
				"typecheck"
			],
			"problemMatcher": [
				"$eslint-stylish"
			]
		}
	]
}
